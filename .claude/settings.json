{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const f=JSON.parse(require('fs').readFileSync(0,'utf8')).tool_input?.file_path;if(f)require('child_process').execSync('npx prettier --write '+JSON.stringify(f),{stdio:'inherit'})\" 2>/dev/null || true"
          },
          {
            "type": "command",
            "command": "npm run type-check && npm run lint",
            "timeout": 120000
          }
        ]
      }
    ]
  }
}
